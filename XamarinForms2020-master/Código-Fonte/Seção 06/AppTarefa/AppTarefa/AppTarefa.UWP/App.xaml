<Application
    x:Class="AppTarefa.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppTarefa.UWP"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ButtonBackground" Color="#4043C9" />
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#26289E" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#0D0E60" />

            <SolidColorBrush x:Key="ButtonForeground" Color="White" />
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />
            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
